<UserControl x:Class="WPF_TOPClassWork.StateElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TOPClassWork"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <Border Margin="5,2" Background="DarkOrange" BorderBrush="DarkOrange" BorderThickness="4" CornerRadius="30" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/image/Собака1.png" Grid.Row="1" Grid.RowSpan="2" Height="{Binding ElementName=ElementTextBlock, Path=FontSize}"/>
                <TextBlock x:Name="ElementTextBlock" Grid.Column="1" Text="{Binding Text}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
