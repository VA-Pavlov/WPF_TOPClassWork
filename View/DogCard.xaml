<UserControl x:Class="WPF_TOPClassWork.View.DogCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TOPClassWork.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="10" BorderThickness="5" BorderBrush="#121327" CornerRadius="20"  
                Background="#212b46">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Name="FirstRow"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Border Background="#fffc99" Grid.RowSpan="2" CornerRadius="20,20,0,0">
                    <Image Source="/Images/Background/DogTracks.png" Stretch="Fill"/>
                </Border>
                <local:Avatar  Grid.Row="1" Grid.RowSpan="2" Size="100" PathIcon="/Images/Avatars/Avatar1.jpg"/>
                <StackPanel  Grid.Row="3">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontSize="{Binding ElementName=AnimalNameTextBlock, Path=FontSize}" Foreground="#f2f48f" Text="♀"/>
                        <TextBlock x:Name="AnimalNameTextBlock" Text="{Binding Name}" Foreground="#f2f48f" VerticalAlignment="Center" FontSize="30"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" Foreground="#858794" Text="{Binding DateOfBiesday, StringFormat={}{0:MM.dd.yyyy}}" FontSize="20"/>
                </StackPanel>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <local:StatusButton Text="{Binding Weight}" PathIcon="/Images/SystemIcons/Scales.png" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
