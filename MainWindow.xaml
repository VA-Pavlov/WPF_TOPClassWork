<Window x:Class="WPF_TOPClassWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TOPClassWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,1"  StartPoint="0,0">
            <GradientStop Color="Red" Offset="0"/>
            <GradientStop Color="Blue" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Border Name="ExempleBorder"  Background="White" BorderBrush="LightCoral" BorderThickness="3" CornerRadius="10">
                <TextBlock x:Name="ExempleTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40">Какой-то текст</TextBlock>
            </Border>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel Margin="0,20">
                    <GroupBox  Header="Цвет фона" FontSize="20">
                        <StackPanel>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> A:</TextBlock>
                                <Slider x:Name="ASlider" Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center" ValueChanged="ABackSlider_ValueChanged" IsSnapToTickEnabled="True"/>
                                <TextBlock Name="FontA" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> R:</TextBlock>
                                <Slider x:Name="RSlider" Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center" ValueChanged="RBackSlider_ValueChanged" IsSnapToTickEnabled="True"/>
                                <TextBlock Name="FontR" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> G:</TextBlock>
                                <Slider x:Name="GSlider" Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center" ValueChanged="GBackSlider_ValueChanged" IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="FontG" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> B:</TextBlock>
                                <Slider x:Name="BSlider" Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center" ValueChanged="BBackSlider_ValueChanged" IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="FontB" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="HEX:"/>
                                <TextBox x:Name="HexTextBlock" Grid.Column="1"/>
                                <Button Grid.Column="2" Content="+" Click="Button_Click"/>
                                <ComboBox Name="ColorBox" Grid.Column="4" SelectionChanged="ComboBox_SelectionChanged">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label Width="50" Background="Red"/>
                                        <TextBlock Grid.Column="1" Text="Red" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label Width="50" Background="Green"/>
                                        <TextBlock Grid.Column="1" Text="Green" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label Width="50" Background="LightBlue"/>
                                        <TextBlock Grid.Column="1" Text="LightBlue" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label Width="50" Background="LightCoral"/>
                                        <TextBlock Grid.Column="1" Text="LightCoral" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label Width="50" Background="White"/>
                                        <TextBlock Grid.Column="1" Text="White" HorizontalAlignment="Center"/>
                                    </Grid>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox  FontSize="15">
                        <GroupBox.Header>
                            <TextBlock FontSize="20">
                                Шрифт
                            </TextBlock> 
                        </GroupBox.Header>
                        <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Button FontFamily="Arial" Content="Arial" Margin="5" Click="FontButton_Click"/>
                            <Button FontFamily="Comics" Content="Comics" Grid.Column="1" Margin="5" Click="FontButton_Click"/>
                            <Button FontFamily="Times New Roman" Content="Times New Roman" Grid.Column="2" Margin="5" Click="FontButton_Click"/>
                            <Button FontFamily="Helvetica" Content="Helvetica" Grid.Column="3" Margin="5" Click="FontButton_Click"/>
                            <Button FontFamily="Courier New" Content="Courier New" Margin="5" Grid.Row="1" Click="FontButton_Click"/>
                            <Button FontFamily="Courier" Content="Courier" Grid.Column="1" Margin="5" Grid.Row="1" Click="FontButton_Click"/>
                            <Button FontFamily="Georgia" Content="Georgia" Grid.Column="2" Margin="5" Grid.Row="1" Click="FontButton_Click"/>
                            <Button FontFamily="Garamond" Content="Garamond" Grid.Column="3" Margin="5" Grid.Row="1" Click="FontButton_Click"/>
                            </Grid>
                    </GroupBox>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock  x:Name="SizeBlock" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"  FontSize="15">40</TextBlock>
                        <Slider Grid.Column="1" Margin="10,0" Minimum="1" Maximum="85" Value="40" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>
                        <TextBlock Grid.RowSpan="2" VerticalAlignment="Center" FontSize="20">Размер текста:</TextBlock>
                    </Grid>
                    <GroupBox Header="Стиль текса" FontSize="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Content="Bold" FontWeight="Bold" Margin="5" Click="WeightButton_Click"/>
                            <Button Content="Medium" FontWeight="Medium" Grid.Column="1" Margin="5" Click="WeightButton_Click"/>
                            <Button Content="Light" FontWeight="Light" Grid.Column="2" Margin="5" Click="WeightButton_Click"/>
                            <Button Content="Normal" FontStyle="Normal" Grid.Row="1" Margin="5" Click="StyleButton_Click"/>
                            <Button Content="Italic" FontStyle="Italic" Grid.Row="1" Grid.Column="1" Margin="5" Click="StyleButton_Click"/>
                            <Button Content="Oblique" FontStyle="Oblique" Grid.Row="1" Grid.Column="2" Margin="5" Click="StyleButton_Click"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox  Header="Цвет Текста" FontSize="20">
                        <StackPanel>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> A:</TextBlock>
                                <Slider Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> R:</TextBlock>
                                <Slider Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> G:</TextBlock>
                                <Slider Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                            <Grid Margin="30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="20" Margin="10"> B:</TextBlock>
                                <Slider Minimum="0" Maximum="255" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">0</TextBlock>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
