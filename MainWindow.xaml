<Window x:Class="WPF_TOPClassWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TOPClassWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="656">
    <Grid>
        <Button Height="20" Width="50" Background="Aquamarine" Panel.ZIndex="0" Margin="0,0,50,40"></Button>
        <Button Height="20" Width="50" Background="RosyBrown" Panel.ZIndex="1" Margin="0,0,20,10"></Button>
        <Button Height="20" Width="50" Background="Thistle" Panel.ZIndex="2" Margin="10,20,0,0"></Button>
        <Canvas>
            <Button Height="30" Width="30" Background="Red" Canvas.Top="50" Canvas.Left="60">1</Button>
            <Button Height="30" Width="30" Background="Red" Canvas.Bottom="50" Canvas.Right="60">2</Button>
        </Canvas>
    </Grid>

</Window>
