<Window x:Class="WPF_TOPClassWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TOPClassWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock Text="ДБ311" DockPanel.Dock="Left" VerticalAlignment="Center" FontSize="30">
            <TextBlock.LayoutTransform>
                <RotateTransform Angle="-90"/>
            </TextBlock.LayoutTransform>
        </TextBlock>
        <DockPanel>
            <Button DockPanel.Dock="Right" Content="+"/>
            <Button DockPanel.Dock="Bottom" Content="+"/>
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="25" >Студенты</TextBlock>
                <TextBlock FontSize="25" Grid.Column="1" HorizontalAlignment="Center">Оценки</TextBlock>
                <Grid Grid.Row="1" Grid.ColumnSpan="2" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox FontSize="15" TextWrapping="Wrap">Павлов Вячеслав Александрович</TextBox>
                    <TextBox Grid.Column="1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">5</TextBox>
                </Grid>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
