<Window x:Class="WPF_TOPClassWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TOPClassWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom">
                <Button DockPanel.Dock="Top" Background="Green" Width="10" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="25" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="35" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="50" Height="10">*</Button>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom">
                <Button DockPanel.Dock="Top" Background="Green" Width="10" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="25" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="35" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="50" Height="10">*</Button>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
                <Button DockPanel.Dock="Top" Background="Green" Width="10" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="25" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="35" Height="10">*</Button>
                <Button DockPanel.Dock="Top" Background="Green" Width="50" Height="10">*</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Background="Red"></Button>
            <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Background="Yellow"></Button>
            <Button Grid.Column="2" Grid.Row="0" Background="Red"></Button>
            <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Background="Yellow"></Button>
            <Button Grid.Column="0" Grid.Row="2" Background="Red"></Button>
            <Button Grid.Column="2" Grid.Row="2" Background="Red"></Button>
        </Grid>
        <DockPanel Grid.Column="1" Grid.Row="1">
            <Button DockPanel.Dock="Top" Background="Red">*</Button>
            <Button DockPanel.Dock="Bottom" Background="White">*</Button>
            <Button DockPanel.Dock="Left" Background="White">***</Button>
            <Button DockPanel.Dock="Right" Background="White">***</Button>
            <Canvas Background="YellowGreen">
                <Button Canvas.Top="30" Canvas.Left="30" Height="20" Width="20"></Button>
                <Button Canvas.Top="30" Canvas.Right="30" Height="20" Width="20"></Button>
                <Button Canvas.Bottom="30" Canvas.Left="58" Height="20" Width="50"></Button>
            </Canvas>
        </DockPanel>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Background="Red" Click="Button_Click_1"></Button>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
            <Button DockPanel.Dock="Top" Background="White" Width="50" Height="40">*</Button>
            <Button DockPanel.Dock="Top" Background="Red" Width="100">*</Button>
            <Button DockPanel.Dock="Top" Background="Red" Width="130">*</Button>
            <Button DockPanel.Dock="Top" Background="Red" Width="160">*</Button>
            <Button DockPanel.Dock="Top" Background="Red" Width="180">*</Button>
        </StackPanel>
    </Grid>
</Window>
