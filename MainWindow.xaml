<Window x:Class="WPF_TOPClassWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TOPClassWork"
        mc:Ignorable="d"
        Title="Глаза" Height="450" Width="450"
        Icon="/IMG_2735.jpg">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button>
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="LightGreen" Offset="0.3"/>
                    <GradientStop Color="Green" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Column="1">
            <Button.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="LightGreen" Offset="0.3"/>
                    <GradientStop Color="Green" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Column="2">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="LightCoral" Offset="0"/>
                    <GradientStop Color="Red" Offset="0.5"/>
                    <GradientStop Color="DarkRed" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Row="1">
            <Button.Background>
                <RadialGradientBrush GradientOrigin="0.8,0.9">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.3"/>
                    <GradientStop Color="Blue" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Column="1" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="LightCoral" Offset="0"/>
                    <GradientStop Color="Red" Offset="0.5"/>
                    <GradientStop Color="DarkRed" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Column="2" Grid.Row="1">
            <Button.Background>
                <RadialGradientBrush GradientOrigin="0.2,0.2">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.3"/>
                    <GradientStop Color="Blue" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
