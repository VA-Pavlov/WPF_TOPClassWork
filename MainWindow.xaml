                <ColumnDefinition/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Margin="5 0">
                <TextBlock Text="Speed: " FontSize="20"/>
                <TextBlock Text="0" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text=" chars/min" FontSize="20"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Fails: " FontSize="20"/>
                <TextBlock Name="FailsBlock" Text="0" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
            <Grid Grid.Column="2">
